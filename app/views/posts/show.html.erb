<header class="intro-header" style="background-image: url('<%= @post.image.url %>')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="post-heading">
          <h1><%= @post.name %></h1>

          <h2 class="subheading"><%= @post.content_cut %></h2>
          <span class="meta">Posted by <%= link_to @post.author.name, user_path(@post.author) %>
            on <%= l @post.created_at, format: :short %></span>
        </div>
      </div>
    </div>
  </div>
</header>

<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <%= @post.content %>

        <hr/>
        <div>
          <div class="post-rating">
            <%= rate_post_button(@post, current_user, :like) if user_signed_in? %>
            <span class="post-rating"><%= @post.rating %></span>
            <%= rate_post_button(@post, current_user, :dislike) if user_signed_in? %>
          </div>
          <div class="post-share">

          </div>
        </div>

      </div>
    </div>
  </div>
</article>



