<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@post.image_url) if @post.image? %>
</p>

<p>
  <strong>Content:</strong>
  <%= markdown(@post.content) %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author_id %>
</p>

<p>
  <strong>Blog:</strong>
  <%= @post.blog_id %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
