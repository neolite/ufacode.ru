<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <h1><%= @post.persisted? ? t('posts.edit') : t('posts.create') %></h1>

      <%= form_for(@post, html: { class: 'form-horizontal' } ) do |f| %>

        <%= form_errors(@post) %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', style: 'width:100%;', rows: 30 %>
        </div>
        <div class="form-group">
          <%= f.label :blog_id, t('posts.blog') %>
          <%= f.collection_select :blog_id, Blog.all, :id, :name, {class: 'form-control'} %>
        </div>
        <div class="form-group">
          <%= f.label :announcement %>
          <%= f.check_box :announcement %>
        </div>
        <div class="fileUpload btn btn-primary form-group">
          <span>Загрузить файл</span>
          <%= f.file_field :image, class: 'upload' %>
        </div>
        <div class="form-group">
          <%= image_tag(@post.image_url) if @post.image? %>
          <%= f.hidden_field :image_cache %>
        </div>
        <div class="actions">
          <%= f.submit t('posts.save'), class: 'btn btn-success' %>
        </div>
      <% end %>

    </div>
  </div>
</div>
